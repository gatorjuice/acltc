
<h1>
  <%= form_tag '/new_contact_confirm', method: :post do %>
    <div class="form-group">
      <%= label_tag :input_first_name %>
      <%= text_field_tag :input_first_name, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :input_last_name %>
      <%= text_field_tag :input_last_name, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :input_email %>
      <%= text_field_tag :input_email, nil, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :input_phone_number %>
      <%= text_field_tag :input_phone_number, nil, class: "form-control" %>
    </div>

    <div>
      <%= button_tag 'Add', class: "btn btn-default" %>
    </div>
  <% end %>
</h1>